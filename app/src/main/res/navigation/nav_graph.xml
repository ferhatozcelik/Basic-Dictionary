<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/searchFragment">

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.ferhatozcelik.basicdictionary.ui.fragments.search.SearchFragment"
        android:label="Search Fragment"
        tools:layout="@layout/fragment_search">
        <action
            android:id="@+id/action_searchFragment_to_searchDetailFragment"
            app:destination="@id/searchDetailFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@id/searchFragment" />
    </fragment>

    <fragment
        android:id="@+id/searchDetailFragment"
        android:name="com.ferhatozcelik.basicdictionary.ui.fragments.searchdetail.SearchDetailFragment"
        android:label="Search Detail Fragment"
        tools:layout="@layout/fragment_search_detail"></fragment>

</navigation>